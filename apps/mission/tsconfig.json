{
  "extends": "@evmosapps/config/ts/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "strict": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/i18n/utils/getLocaleFromPath.ts",
    "tailwind.config.mts",
    "../../packages/user/src/global.d.ts",
    "../../packages/user/src/auth/next-auth.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
