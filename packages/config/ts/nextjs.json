{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext", "ESNext"],
    "module": "ESNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext"
  },

  "exclude": ["node_modules"]
}
